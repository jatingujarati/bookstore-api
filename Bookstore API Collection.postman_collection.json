					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Check if the response contains the token\r",
									"if (pm.response.code === 200) {\r",
									"    const jsonData = pm.response.json();\r",
									"    \r",
									"    // Assuming the token is returned in a key called 'token'\r",
									"    if (jsonData.data.token) {\r",
									"        // Set the token in an environment variable called 'token'\r",
									"        pm.environment.set('token', jsonData.data.token);\r",
									"        \r",
									"        console.log('Token successfully saved:');\r",
									"    } else {\r",
									"        console.log('No token found in the response');\r",
									"    }\r",
									"} else {\r",
									"    console.log('Login failed');\r",
									"}\r",
									""
